<% provide(:title, "Sign in") %>
<h1>Sign in</h1>
<%= form_for(:session, :url => sessions_path) do |f| %>
<div class="kubee-layout">
  <div class="kubee-layout-row">
    <div class="kubee-layout-cell">
      <div class="kubee-layout-cell-input">
		  <%= f.label :email %>
		  <%= f.text_field :email %>
      </div>
    </div>
    <div class="kubee-layout-cell">
      <div class="kubee-layout-cell-input">
		  <%= f.label :password %>
		  <%= f.password_field :password %>
      </div>
    </div>
  </div>
  <div class="kubee-layout-row">
    <div class="kubee-layout-cell">
      <div class="kubee-layout-cell-content">
		  <%= f.submit "Sign in" %>
      </div>
    </div>
  </div>
</div>
<% end %>

<p>New user? <%= link_to "Sign up now!", signup_path %></p>